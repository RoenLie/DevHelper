{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    // "module": "es2015", original from template
    "module": "esnext",
    "baseUrl": "",
    "types": []
  },
  "include": [
    "main.ts",
    "polyfill.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "strictTemplate": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true,
  }
}
